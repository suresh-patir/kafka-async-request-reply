{
  "name": "jdbc-sink-connector",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "request-topic-new",
    "connection.url": "jdbc:postgresql://127.0.0.1:5435/postgres",
    "connection.user": "postgres",
    "connection.password": "postgres",
    "connection.ds.pool.size": 5,
    "table.name.format": "customer_requests",
    "auto.create": "true",
    "insert.mode": "insert",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.storage.StringConverter",
    "pk.mode": "record_key",
    "pk.fields": "id",
    "transforms": "HoistKey,HoistValue",
    "transforms.HoistKey.type": "org.apache.kafka.connect.transforms.HoistField$Key",
    "transforms.HoistKey.field": "id",
    "transforms.HoistValue.type": "org.apache.kafka.connect.transforms.HoistField$Value",
    "transforms.HoistValue.field": "value"
  }
}